<body class="text-center">
  <div id="particles-js"><canvas class="particles-js-canvas-el" width="1889" height="349" style="width: 100%; height: 100%;"></canvas></div>
  <%- include("../views/navbar.ejs")  %>

<div class="signup-form container">
  <form action="/login" method="post" class="form-signin">

    <img class="mb-2" src="images/Qres.logo.png" alt="" height="40">
    <h4 class="mb-2 font-weight-normal" style="  font-family: 'Montserrat',sans-serif;">Login to your account</h4>
    <p class="hint-text"> Login with your G-mail or email address</p>
    <div class="social-btn text-center">
      <a style="border: 1px solid black;"  href="/auth/google" class="btn  btn-light btn-sm"> 
        <span> <img style="height: 24px;" src="/images/google.svg" alt="google_icon"> </span>
         <span class="ml-4">Google</span>
        </a>
		</div>
    <div class="or-seperator"><b>or</b></div>
    <% if(messages.error){ %>
      <span style="color:red;"><%= messages.error %>  </span>
  <%  }%>
        <div class="form-group">
        	<input type="email" class="form-control input-lg" name="email" placeholder="Email Address" >
        </div>
        <div class="form-group" style="margin-bottom:0;">
            <input type="password"  id="inputPassword" class="form-control input-lg" name="password" placeholder="Password" >
        </div>
    <button id="signbutton" style="border-radius:50px;" class="btn my-4 btn-lg btn-primary btn-block" type="submit">Login</button>
    <a class="my-2" href="/reset">forgot password ?</a>
    <p class="mt-2 mb-2 text-muted">Â© <%= new Date().getFullYear()%>-<%=new Date().getFullYear() + 1%></p>
  </form>
  <div class="text-center"> New to qkres ? <a style="color:green;" href="/register"> signup here</a></div>
</div>

