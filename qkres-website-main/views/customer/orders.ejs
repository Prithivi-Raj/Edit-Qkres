    <script src="https://kit.fontawesome.com/89e9116ed8.js" crossorigin="anonymous"></script>

    <link rel="shortcut icon" href="/images/favicon.ico"

    
</head>
<body style="background: #e8ffff">
<%-include("../navbar.ejs");  %>

<section class="orders light-section" style="padding-top:30px;">
  <div class="container pt-12 ">
      <h1 style="font-size:1.2rem;">All orders</h1>

<% if(messages.success){ %>
  <div style="background:green;border-radius:20px;" id="success" class="d-flex align-items-center px-4  " role="alert">
<img style="height:20px;" src="/images/check.svg" alt="check">
<p class="mx-2 mt-3"><%=messages.success%></p>
  </div>
<% } %>

  

 <% if(order.length){ %>
   <% order.forEach((order)=>{ %>
  

     <div class="container-fluid  wedueid">
      <% if(order.status != "completed" || order.message !="Order cancellalation approved"){ %>
        <div> <b>OrderId:</b>
          <span><%=order._id%></span>
          <span><a class="btn btn-sm btn-primary" href="/customer/order/<%= order._id %>">Status</a></span>
        </div>
      <!-- <div id="stat">
      <span><b>status:</b></span>
      <span> <h6 class="ml7"> 
       <span class="text-wrapper">
        <span class="letters"><%= order.status %></span>
       </span>
      </h6></span>
      </div> -->
      
        <p> <b>Phone:</b> <span><%= order.phone %></span></p>
      
        <p> <b>City:</b> <span><%= order.city %></span></p>
      
        <p> <b>Pincode:</b> <span><%= order.pincode %></span></p>
      
        <p> <b>Landmark:</b> <span><%= order.landmark %></span></p>
        <p style="display: flex;flex-direction: column;"> <b>Address:</b> <%= order.address %>
       </p>
      
       <div>
         <b>Order placed on :</b>
         <span>
           <%= moment(order.createdAt).format('MMM Do YYYY') %>
         </span>
       </div>
       <div style="margin-left: auto;">
        <% if(order.message === "customer requested for cancellation"){ %>
          <p style="padding: 5px;border: 2px solid black;border-radius: 50px;background-color: aliceblue;">Cancel order request submitted</p>
         <%}else{ %>
          <form action="/cancel-order-request" method="POST">
            <input type="hidden" name="id" value="<%= order._id %>">
            <input type="hidden" name="cancelInput" id="cancel" value="customer requested for cancellation">
          <button type="submit" class="btn btn-sm btn-danger" onclick="return notify()">Cancel Order</button>
       <%  }%>

        </form>
       </div>
    <%  }else{ %>
     <% if(order.status === "completed" && order.message !="Order cancellalation approved"){ %>
      <div> 
        <strike>
          <b>OrderId:</b>
        <span><%=order._id%></span>
        </strike>
        <!-- <span><a class="btn btn-sm btn-primary" href="/customer/order/<%= order._id %>">Status</a></span> -->
      </div>

      <p> <b>status:</b> <span><%= order.status %></span></p>

      <p> <b>Phone:</b> <span><%= order.phone %></span></p>

      <p> <b>City:</b> <span><%= order.city %></span></p>

      <p> <b>Pincode:</b> <span><%= order.pincode %></span></p>

      <p> <b>Landmark:</b> <span><%= order.landmark %></span></p>


      <p style="display: flex;flex-direction: column;"> <b>Address:</b> <%= order.address %>
     </p>
    
     <div>
       <b>Order placed on :</b>
       <span>
         <%= moment(order.createdAt).format('MMM Do YYYY hh:mm') %>
       </span>
     </div>
    <% }else{ %>
      <div> 
        <strike>
          <b>OrderId:</b>
        <span><%=order._id%></span>
        </strike>
        <!-- <span><a class="btn btn-sm btn-primary" href="/customer/order/<%= order._id %>">Status</a></span> -->
      </div>

      <p> <b>status:</b> <span>Order cancelled </span></p>

      <p> <b>Phone:</b> <span><%= order.phone %></span></p>

      <p> <b>City:</b> <span><%= order.city %></span></p>

      <p> <b>Pincode:</b> <span><%= order.pincode %></span></p>

      <p> <b>Landmark:</b> <span><%= order.landmark %></span></p>


      <p style="display: flex;flex-direction: column;"> <b>Address:</b> <%= order.address %>
     </p>
    
     <div>
       <b>Order placed on :</b>
       <span>
         <%= moment(order.createdAt).format('MMM Do YYYY hh:mm') %>
       </span>
     </div>
  <%  }  %>
     
     <div style="margin-left: auto;">
       <!-- <a href="/cancel_order/:token" class="btn btn-sm btn-danger my-2">Cancel Order</a> -->
     </div>

   <% } %>
        

     </div>

<%   }) %>

 <% }else{ %>

   <div class="d-flex justify-content-center align-items-center mt-4" style="flex-direction: column;">
         <h4> No orders found</h4>
         <div>
          <a class="btn btn-lg btn-primary" href="/">Go to Home page</a>
         </div>
         
   </div>


   <%}%>

  


 

</section>


<script src="/socket.io/socket.io.js"></script>
